<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.picture_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">

  <div class="cards my-5">
    <% @garden.plants.each do |plant| %>
      <%= render 'plant', plant: plant %>
    <% end %>
  </div>



  <%= render 'plants/form', garden: @garden, plant: @plant  %>

</div>
