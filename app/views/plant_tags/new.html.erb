<div class="container">
  <div class="row justify-content-center">
    <div class="col-3">
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.input :tag, collection: Tag.all.order(:name), input_html: { multiple: true, data: { controller: 'select2' }}, include_hidden: false %>
        <%= f.submit 'Add Tag', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
